{
  "name": "bytecodec",
  "version": "3.0.1",
  "description": "JS/TS byte toolkit for base64url, UTF-8 strings, JSON, normalization, compression, concatenation, and comparison in browser and Node runtimes.",
  "keywords": [
    "base64url",
    "base64",
    "Uint8Array",
    "buffersource",
    "arraybuffer",
    "bytes",
    "encoding",
    "decoding",
    "browser",
    "node",
    "utf8",
    "json",
    "equals",
    "compression",
    "gzip",
    "binary",
    "z-base"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-base/bytecodec.git"
  },
  "bugs": {
    "url": "https://github.com/z-base/bytecodec/issues"
  },
  "homepage": "https://github.com/z-base/bytecodec#readme",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node test/run-coverage.mjs && node test/e2e/run.mjs",
    "bench": "npm run build && node benchmark/bench.js",
    "prepublishOnly": "npm run test && npm run bench"
  },
  "c8": {
    "all": true,
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.d.ts",
      "test/**",
      "benchmark/**",
      "playwright.config.ts"
    ]
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "c8": "^10.1.3",
    "playwright": "^1.58.0",
    "typescript": "^5.6.3"
  }
}
